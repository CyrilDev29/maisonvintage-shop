                    <a class="nav-link" href="{{ path('home') }}">Accueil</a>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">CatÃ©gories</a>
                    <ul class="dropdown-menu">
                        {% for cat in categories() %}
                            <li>
                                <a class="dropdown-item" href="{{ path('categorie_show', { slug: cat.slug }) }}">{{ cat.nom }}</a>
                            </li>
                        {% else %}
                            <li><span class="dropdown-item-text text-muted">Aucune catÃ©gorie</span></li>
                        {% endfor %}
                    </ul>
                </li>

                <li class="nav-item">

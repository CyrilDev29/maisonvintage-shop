{% extends 'base.html.twig' %}
{% block title %}Panier — Maisonvintage{% endblock %}

{% block body %}
    <section class="container" style="max-width:1100px;margin:2rem auto;padding:0 1rem;">
        <h1>Panier</h1>

        {% for label, messages in app.flashes %}
            {% for msg in messages %}
                <div style="margin:10px 0;padding:.6rem 1rem;border:1px solid #ddd;border-radius:8px;">{{ msg }}</div>
            {% endfor %}
        {% endfor %}

        {% if items is empty %}
            <p>Votre panier est vide.</p>
        {% else %}
            <table style="width:100%;border-collapse:collapse;margin-top:1rem;">
                <thead>
                <tr>
                    <th style="text-align:left;border-bottom:1px solid #ddd;padding:.5rem;">Article</th>
                    <th style="text-align:right;border-bottom:1px solid #ddd;padding:.5rem;">Prix</th>
                    <th style="text-align:center;border-bottom:1px solid #ddd;padding:.5rem;">Qté</th>
                    <th style="text-align:right;border-bottom:1px solid #ddd;padding:.5rem;">Sous-total</th>
                    <th style="border-bottom:1px solid #ddd;"></th>
                </tr>
                </thead>
                <tbody>
                {% for line in items %}
                    <tr>
                        <td style="padding:.5rem;">
                            <a href="{{ path('article_show', {slug: line.article.slug}) }}">{{ line.article.titre }}</a>
                        </td>
                        <td style="padding:.5rem;text-align:right;">
                            {{ line.price|number_format(2, ',', ' ') }} €
                        </td>
                        <td style="padding:.5rem;text-align:center;white-space:nowrap;">
                            <form action="{{ path('cart_dec', {id: line.article.id}) }}" method="post" style="display:inline;">
                                <button type="submit" title="Diminuer"
                                        style="border:1px solid #ccc;border-radius:6px;background:#fff;padding:.25rem .55rem;">−</button>
                            </form>

                            <span style="display:inline-block;min-width:2ch;text-align:center;margin:0 .5rem;">
                                {{ line.qty }}
                            </span>

                            <form action="{{ path('cart_inc', {id: line.article.id}) }}" method="post" style="display:inline;">
                                <button type="submit" title="Augmenter"
                                        style="border:1px solid #ccc;border-radius:6px;background:#fff;padding:.25rem .55rem;">+</button>
                            </form>
                        </td>
                        <td style="padding:.5rem;text-align:right;">
                            {{ line.subtotal|number_format(2, ',', ' ') }} €
                        </td>
                        <td style="padding:.5rem;text-align:right;">
                            <form action="{{ path('cart_remove', {id: line.article.id}) }}" method="post" style="display:inline;">
                                <button type="submit" style="border:1px solid #ccc;border-radius:6px;background:#fff;padding:.35rem .6rem;">Retirer</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <td colspan="3" style="padding:.5rem;text-align:right;font-weight:bold;">Total</td>
                    <td style="padding:.5rem;text-align:right;font-weight:bold;">
                        {{ total|number_format(2, ',', ' ') }} €
                    </td>
                    <td></td>
                </tr>
                </tfoot>
            </table>

            <div style="margin-top:1rem;display:flex;gap:.75rem;flex-wrap:wrap;">
                <form action="{{ path('cart_clear') }}" method="post">
                    <button type="submit" style="padding:.6rem 1rem;border:1px solid #bbb;border-radius:8px;background:#fff;">
                        Vider le panier
                    </button>
                </form>

                <a href="{{ path('checkout') }}" class="btn btn-dark">
                    Passer la commande
                </a>
            </div>
        {% endif %}
    </section>
{% endblock %}

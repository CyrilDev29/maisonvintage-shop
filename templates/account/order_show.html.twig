{% extends 'base.html.twig' %}
{% block title %}Commande {{ order.reference }}{% endblock %}

{% block body %}
    <div class="container my-4">
        <h1 class="h4 mb-3">Commande {{ order.reference }}</h1>

        <div class="mb-3">
            <strong>Date :</strong> {{ order.createdAt|date('d/m/Y H:i') }}<br>
            <strong>Statut :</strong>
            <span class="badge
            {% if order.status.value == 'En attente de paiement' %} bg-secondary
            {% elseif order.status.value == 'En cours' %} bg-warning text-dark
            {% elseif order.status.value == 'En pr√©paration' %} bg-info text-dark
            {% elseif order.status.value == 'Exp√©di√©e' %} bg-success
            {% elseif order.status.value == 'Livr√©e' %} bg-success
            {% elseif order.status.value == 'Annul√©e' %} bg-danger
            {% else %} bg-light text-dark
            {% endif %}
        ">
            {{ order.status.value }}
        </span><br>
            <strong>Total :</strong> {{ order.total|number_format(2, ',', ' ') }} ‚Ç¨
        </div>

        {# --- T√©l√©chargement facture (non affich√© si commande annul√©e) --- #}
        {% if order.status.value != 'Annul√©e' %}
            <div class="mb-4">
                <a href="{{ path('account_order_invoice', { id: order.id }) }}"
                   class="btn btn-outline-primary btn-sm">
                    üìÑ T√©l√©charger la facture (PDF)
                </a>
            </div>
        {% endif %}

        <h2 class="h5 mt-4">Articles</h2>
        <div class="table-responsive">
            <table class="table table-bordered align-middle">
                <thead class="table-light">
                <tr>
                    <th style="width:90px;">Photo</th>
                    <th>Produit</th>
                    <th class="text-end">Prix unitaire</th>
                    <th class="text-center">Quantit√©</th>
                    <th class="text-end">Sous-total</th>
                </tr>
                </thead>
                <tbody>
                {% for item in items %}
                    <tr>
                        <td class="text-center">
                            {% set img = item.productImage %}
                            {% if img %}
                                {% set url = (img matches '/^https?:\\/\\//') ? img : asset(img) %}
                                <img src="{{ url }}" alt="{{ item.productName }}"
                                     class="img-thumbnail"
                                     style="width:72px;height:72px;object-fit:cover;">
                            {% else %}
                                <span class="text-muted">‚Äî</span>
                            {% endif %}
                        </td>
                        <td>{{ item.productName }}</td>
                        <td class="text-end">{{ item.unitPrice|number_format(2, ',', ' ') }} ‚Ç¨</td>
                        <td class="text-center">{{ item.quantity }}</td>
                        <td class="text-end">{{ item.lineTotal|number_format(2, ',', ' ') }} ‚Ç¨</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <h2 class="h5 mt-4">Adresse de livraison</h2>
        <p>
            {{ order.prenom }} {{ order.nom }}<br>
            {{ order.rue }}<br>
            {{ order.codePostal }} {{ order.ville }}<br>
            {{ order.pays }}<br>
            üìû {{ order.telephone }}<br>
            ‚úâÔ∏è {{ order.user.email }}
        </p>

        {# --- Annulation (si autoris√©e) --- #}
        {% if order.status.value in ['En attente de paiement', 'En cours', 'En pr√©paration'] %}
            <form method="post"
                  action="{{ path('app_account_order_cancel', { id: order.id }) }}"
                  onsubmit="return confirm('√ätes-vous s√ªr de vouloir annuler cette commande ? Cette action est irr√©versible.');"
                  class="mb-4">
                <input type="hidden" name="_token" value="{{ csrf_token('cancel_order_' ~ order.id) }}">
                <button type="submit" class="btn btn-danger btn-sm">
                    ‚ùå Annuler la commande
                </button>
            </form>
        {% endif %}

        <a href="{{ path('app_account_orders') }}" class="btn btn-secondary mt-3">
            ‚Üê Retour √† mes commandes
        </a>
    </div>
{% endblock %}

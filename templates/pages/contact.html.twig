{% extends 'base.html.twig' %}

{% block title %}Contact — Maison Vintage{% endblock %}

{% block body %}
    <section class="container" style="max-width:800px;margin:2rem auto;">
        <h1 class="mb-4">Contactez-nous</h1>

        {# Message flash si succès ou erreur #}
        {% for label, messages in app.flashes %}
            <div class="alert alert-{{ label }}">
                {% for message in messages %}
                    {{ message }}
                {% endfor %}
            </div>
        {% endfor %}

        {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.name, 'Votre nom') }}
            {{ form_widget(form.name, { 'attr': { 'class': 'form-control' } }) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.email, 'Votre email') }}
            {{ form_widget(form.email, { 'attr': { 'class': 'form-control' } }) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.subject, 'Sujet') }}
            {{ form_widget(form.subject, { 'attr': { 'class': 'form-control' } }) }}
            {{ form_errors(form.subject) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.message, 'Message') }}
            {{ form_widget(form.message, { 'attr': { 'class': 'form-control', 'rows': 6 } }) }}
            {{ form_errors(form.message) }}
        </div>

        <button type="submit" class="btn btn-dark">Envoyer</button>
        {{ form_end(form) }}
    </section>
{% endblock %}

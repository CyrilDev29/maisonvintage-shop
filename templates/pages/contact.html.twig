{% extends 'base.html.twig' %}
{% block title %}Contact — Maison Vintage{% endblock %}

{% block body %}
    <section class="container" style="max-width:800px;margin:2rem auto;">
        <h1 class="mb-4">Contactez-nous</h1>

        {# Flashes #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">{{ message }}</div>
            {% endfor %}
        {% endfor %}

        {# >>> VERY IMPORTANT : on désactive Turbo pour ce form #}
        {{ form_start(form, { attr: { class: 'mt-3', 'data-turbo': 'false' } }) }}
        {# Erreurs globales du formulaire (ex: CSRF) #}
        {{ form_errors(form) }}

        <div class="mb-3">
            {{ form_label(form.name, 'Votre nom') }}
            {{ form_widget(form.name, { attr: { class: 'form-control' } }) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.email, 'Votre email') }}
            {{ form_widget(form.email, { attr: { class: 'form-control' } }) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.subject, 'Sujet') }}
            {{ form_widget(form.subject, { attr: { class: 'form-control' } }) }}
            {{ form_errors(form.subject) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.message, 'Message') }}
            {{ form_widget(form.message, { attr: { class: 'form-control', rows: 6 } }) }}
            {{ form_errors(form.message) }}
        </div>

        {# champ honeypot si présent dans le type #}
        {% if form.website is defined %}
            {{ form_widget(form.website) }}
        {% endif %}

        <button type="submit" class="btn btn-dark">Envoyer</button>
        {{ form_end(form) }}
    </section>
{% endblock %}
